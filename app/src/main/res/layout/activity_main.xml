<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/travel_calculator"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:text="@string/travel_calculator_button"
        android:layout_gravity="center"
        android:textSize="18sp"
    />

    <Button
        android:id="@+id/money_converter"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:text="@string/money_converter_button"
        android:layout_gravity="center"
        android:textSize="18sp"
    />

    <Button
        android:id="@+id/temperature_meter"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:text="@string/temperature_meter_button"
        android:layout_gravity="center"
        android:textSize="18sp"
    />
</LinearLayout>